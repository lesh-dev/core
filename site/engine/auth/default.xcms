<?php
    $u = xcms_user();
    $ag = false;
    foreach($argv as $k=>$v)
    {
        if ($k == 0) continue;
        if ($v[0] == "#")
        {
            if ($u->check_rights(substr($v, 1), false))
            {
                $ag = true;
            }
        }
        else
            if ($u->login() == $v)
            {
                $ag = true;
            }
    }
    if (!$ag)
        throw new Exception("Доступ запрещён. ", XE_ACCESS_DENIED);
?>
