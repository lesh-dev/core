<?php
  if(file_exists($SETTINGS["datadir"]."cms/pages/".@$pageid."/".@$argv[1]))
    include($SETTINGS["datadir"]."cms/pages/".@$pageid."/".@$argv[1]);
  else if($argv[2]=="recurce")
  {
    $predir = $SETTINGS["datadir"]."cms/pages/".@$pageid."";
    while(1)
    {
      if(!file_exists("$predir/info")) break;
      if(file_exists("$predir/{$argv[1]}"))
      {
        include("$predir/{$argv[1]}");
      }
      $predir = "$predir/..";
    }
  }
?>
