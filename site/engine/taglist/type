<?php
  global $SETTINGS;
  $taglistt = glob("{$SETTINGS["engine_dir"]}cms/*.pagetype");
  foreach($taglistt as $key=>$value)
  {
    $v = str_replace("{$SETTINGS["engine_dir"]}cms/","",$value);
    $v = str_replace(".pagetype","",$v);
    $taglist[file_get_contents($value)]=$v;
  }
  $tagname = "Тип раздела";
?>