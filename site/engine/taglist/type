<?php
    global $SETTINGS;
    $pt_prefix = "{$SETTINGS["engine_dir"]}cms/";
    $list = glob("$pt_prefix*.pagetype");
    foreach ($list as $key=>$value)
    {
        $v = str_replace($pt_prefix, "", $value);
        $v = str_replace(".pagetype", "", $v);
        $taglist[trim(file_get_contents($value))] = trim($v);
    }
    $tagname = "Тип раздела";
?>