function xsm_edit_prep()
{
    global $person_fields;
    global $content_dir;

    $person_id = xcms_get_key_or($_GET, 'person_id', '-1'); // invalid key
    // TODO: escaping/filtering
    $db = xdb_get();
    if ($person_id != "new")
    {
        $preps_sel = $db->query("SELECT * FROM person WHERE person_id = $person_id");
        if (!($person = $preps_sel->fetchArray(SQLITE3_ASSOC)))
        {
            xcms_log(0, "Cannot fetch person with person_id=$person_id.");
            return;
        }
        $db->close();
    }
    else
    {
        $person = array(
            "person_id"=>$person_id,
            "is_teacher"=>"teacher"
        );
    }

    $field_types = array(
        "favourites"=>"textarea",
        "achievements"=>"textarea",
        "hobby"=>"textarea",
        "person_comment"=>"textarea"
    );

    ?>
    <form method="post" action="edit-prep">
        <input type="hidden" name="person_id" value="<?php echo $person_id; ?>" />
        <table summary="Препод" class="ankEdit">
            <tr>
                <td class="ankListRowTitle">Персона</td>
            </tr>
            <tr><td class="ankList"><span class="ankEditField">Статус анкеты</span>
                <?php echo xcms_ank_make_selector($person["activity_status"], "edit"); ?></td></tr>
            <?php
            foreach ($person_fields as $key=>$field_title)
            {
                $value = $person[$key];
                $attr = "";
                if ($key == "activity_status") continue; // handled above the loop
                // handle readonly fields
                if ($key == "user_agent" ||
                    $key == "person_created" ||
                    $key == "person_modified") $attr = ' readonly="readonly"'?>
                <tr><td class="ankList"><span class="ankEditField"><?php echo $person_fields[$key]; ?></span>
                <?php
                if (array_key_exists($key, $field_types)) {?>
                    <textarea class="ankEdit" name="<?php echo $key; ?>"><?php
                        echo htmlspecialchars($value); ?></textarea/><?php
                } else {?>
                    <input type="text" class="ankEdit" value="<?php echo htmlspecialchars($value); ?>"
                        name="<?php echo $key; ?>" <?php echo $attr; ?> /><?php
                } ?>
                </td></tr>
                <?php
            }?>
        </table>
        <div style="white-space: nowrap"><input type="submit" name="update-prep"
            value="Сохранить" style="margin-left: 0px; margin-top: 5px;" />
        <a class="linkButton" href="view-prep#<?php echo $person_id; ?>"
            style="height: 20px; line-height: 20px; vertical-align: bottom;">Вернуться к списку людей</a></div>
    </form>
    <?php
}

function xsm_update_prep()
{
    global $person_fields;

    $person_id = xcms_get_key_or($_POST, 'person_id', 'invalid'); // invalid key
    $res = xdb_insert_or_update('person', array('person_id'=>$person_id), $_POST, $person_fields);
    if ($res)
    {?>
        <p>Препод сохранён успешно. <a href="view-prep#<?php echo $person_id; ?>">Вернуться к просмотру</a></p><?php
    }
    else
    {?>
        <p>Не удалось добавить запись. <a href="view-prep#<?php echo $person_id; ?>">Вернуться к просмотру</a></p><?php
    }
}

if (@$_POST["update-prep"])
    xsm_update_prep();
else
    xsm_edit_prep();
?>
