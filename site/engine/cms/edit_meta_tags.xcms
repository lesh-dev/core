<div class="admin-widget">
    <h3>META-информация</h3>
    <form method="post">
<?php
    if (@$_POST["edit-meta"])
    {
        $description = @$_POST["description"];
        $author = @$_POST["author"];
        $keywords = @$_POST["keywords"];
        $ifn = xcms_get_info_file_name();
        $list = xcms_get_list($ifn);
        // all necessary filtering is performed internally
        $list["meta-author"] = $author;
        $list["meta-description"] = $description;
        $list["meta-keywords"] = $keywords;
        xcms_save_list($ifn, $list);
        ?>
        <div class="notice">Мета-информация успешно обновлена</div>
        <?php
    }
    $list = xcms_get_list(xcms_get_info_file_name());
?>
    <table>
        <!-- TODO: replace table -->
