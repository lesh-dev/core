            <td><textarea cols="80" rows="3" name="description"><?php
                echo htmlspecialchars(@$list["meta-description"]);
                ?></textarea></td>
        </tr>
        <tr><td>Ключевые слова</td>
            <td><textarea cols="80" rows="2" name="keywords"><?php
                echo htmlspecialchars(@$list["meta-keywords"]);
                ?></textarea>
        </tr>
        <tr><td>Автор</td>
            <td><input size="80" name="author" value="<?php
                echo htmlspecialchars(@$list["meta-author"]);
                ?>" />
        </tr>
