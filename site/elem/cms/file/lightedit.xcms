	if(@$_FILES)
	{
		//echo @$_FILES["upload"]["tmp_name"];
		//echo @$_FILES["upload"]["type"];
		//echo @$_FILES["upload"]["error"];
		if(@$_FILES["upload"]["error"])
		{
			echo "<h3>Загрузка не удалась.</h3>";
			@unlink("data/cms/pages/$pageid/ftype");
			@unlink("data/cms/pages/$pageid/fname");
			@unlink("data/cms/pages/$pageid/stream");
		}
		else 
		{
			$f = fopen("data/cms/pages/$pageid/ftype","w");
			fputs($f,@$_FILES["upload"]["type"]);
			fclose($f);
			$f = fopen("data/cms/pages/$pageid/fname","w");
			fputs($f,@$_FILES["upload"]["name"]);
			fclose($f);
			copy(@$_FILES["upload"]["tmp_name"],"data/cms/pages/$pageid/stream");
			if(@$_POST["mlock-section"]) 
			@unlink("data/cms/pages/$pageid/lockmenu");
			else 
			{
				$f = fopen("data/cms/pages/$pageid/lockmenu","w");
				fputs($f," ");
				fclose($f);
			}
			if(@$_POST["immidiate-file"])
				$INFO["immidiate"] = "true";
			else
				$INFO["immidiate"] = "false";			
			saveList($INFO,"data/cms/pages/$pageid/info");
		}
	}
	if(file_exists("data/cms/pages/$pageid/fname"))
	{
		echo "<h3>".@file_get_contents("data/cms/pages/$pageid/fname")."</h3>";
		$sz = filesize("data/cms/pages/$pageid/stream");
		echo "Размер: $sz<br>";
		echo "";
		
	}
	

